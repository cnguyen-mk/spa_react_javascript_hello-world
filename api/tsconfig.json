{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
     "allowJs": true /* Allow javascript files to be compiled. */,  
     "resolveJsonModule": true,
    "target": "es2018",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["graphql/**/*", "prisma/**/*"]
}
